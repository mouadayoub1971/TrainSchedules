<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mouad.frontend.Controllers.Admin.BookingDashboardControllerv1">
    <VBox spacing="20" style="-fx-padding: 20;">
        <!-- Most Booking Users -->
        <VBox spacing="10">
            <Label text="Most Booking Users" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="mostBookingUsersTable" VBox.vgrow="ALWAYS" prefHeight="200">
                <columns>
                    <TableColumn fx:id="userEmailColumn" text="User Email" prefWidth="200"/>
                    <TableColumn fx:id="bookingCountColumn" text="Booking Count" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Most Reserved Routes -->
        <VBox spacing="10">
            <Label text="Most Reserved Routes" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="mostReservedRoutesTable" VBox.vgrow="ALWAYS" prefHeight="200">
                <columns>
                    <TableColumn fx:id="routeColumn" text="Route" prefWidth="200"/>
                    <TableColumn fx:id="routeCountColumn" text="Route Count" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Most Reserved Durations -->
        <VBox spacing="10">
            <Label text="Most Reserved Durations" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="mostReservedDurationsTable" VBox.vgrow="ALWAYS" prefHeight="200">
                <columns>
                    <TableColumn fx:id="durationColumn" text="Duration" prefWidth="200"/>
                    <TableColumn fx:id="durationCountColumn" text="Booking Count" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Popular Destinations -->
        <VBox spacing="10">
            <Label text="Popular Destinations" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="popularDestinationsTable" VBox.vgrow="ALWAYS" prefHeight="200">
                <columns>
                    <TableColumn fx:id="destinationColumn" text="Destination" prefWidth="200"/>
                    <TableColumn fx:id="destinationCountColumn" text="Booking Count" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Popular Departures -->
        <VBox spacing="10">
            <Label text="Popular Departures" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <TableView fx:id="popularDeparturesTable" VBox.vgrow="ALWAYS" prefHeight="200">
                <columns>
                    <TableColumn fx:id="departureColumn" text="Departure" prefWidth="200"/>
                    <TableColumn fx:id="departureCountColumn" text="Booking Count" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </VBox>
</ScrollPane>
